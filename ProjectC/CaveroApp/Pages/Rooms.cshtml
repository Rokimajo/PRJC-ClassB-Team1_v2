@page
@model CaveroApp.Pages.Rooms

@{
    Layout = "Shared/CaveroLayout";
    ViewData["Title"] = "Rooms";
}

<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="css/globals.css" />
    <link rel="stylesheet" href="css/styleguide.css" />
    <link rel="stylesheet" href="css/dashboardmain.css" />
  </head>
<body>

@*buttons on sidebar start*@
<button class="other-page-block dashboard" onclick="location.href='/Dashboard'">
    <div class="dashboard-text">Dashboard</div>
    <img class="image" src="img/image-1.png"/>
</button>

<button class="other-page-block agenda" onclick="location.href='/Agenda'">
    <div class="agenda-text">Agenda</div>
    <img class="img" src="img/image-2.png"/>
</button>

<button class="current-page-block rooms" onclick="location.href='/Rooms'">
    <div class="rooms-text">Kamers</div>
    <img class="img" src="img/image-3-1.png"/>
</button>

<div class="overlap-wrapper">
    <div class="overlap">
        <div class="group-5">
            <div class="group-6">
                <div class="text-wrapper-3">Instellingen</div>
            </div>
            <img class="image-2" src="img/image-3.png"/>
        </div>
        <img class="img" src="img/image-4.png"/>
    </div>
</div>
@*buttons on sidebar end*@

</body>
</html>