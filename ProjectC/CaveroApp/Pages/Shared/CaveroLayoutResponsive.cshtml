<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="stylesheet" href="css/globals.css" />
        <link rel="stylesheet" href="css/styleguide.css" />
        <link rel="stylesheet" href="css/dashboard.css" />
</head>
<body>
<div class="grid-container">
    <div class="hamburger-menu">
        <strong>&#9776</strong>
    </div>
    <header class="header">
        <h1 style="color: white">This is inside the header.</h1>
    </header>
    <aside class="aside">
        <div class="aside-close-icon">
            <strong>&times;</strong>
        </div>
        <ul class="aside_list">
            <img src="/img/caverologowhite.png" alt="Cavero Logo"/>
            <li class="aside_list_item">Item 1</li>
            <li class="aside_list_item">Item 2</li>
            <li class="aside_list_item">Item 3</li>
            <li class="aside_list_item">Item 4</li>
            <li class="aside_list_item">Item 5</li>
            <li class="aside_list_item">Item 6</li>
        </ul>
    </aside>
    <main class="main">
        <div class="main-body">
            @RenderBody()
            <div class="card one">aaa</div>
            <div class="card two">aaa</div>
            <div class="card three">aaa</div>
        </div>
    </main>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
// script to open and close the sidebar menu on phone layouts.
const hamburger_menu = document.querySelector(".hamburger-menu");
const close_icon = document.querySelector(".aside-close-icon");
const aside = document.querySelector(".aside");

function toggle(elm, className) {
    if (elm.classList.contains(className)) {
        elm.classList.remove(className);
        }
    else {
        elm.classList.add(className);
        }
    }
    
    hamburger_menu.addEventListener("click", function(){toggle(aside, "active")});
    close_icon.addEventListener("click", function (){toggle(aside, "active")});
</script>
 
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>