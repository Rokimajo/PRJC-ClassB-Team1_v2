@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = $"Your email has been confirmed redirecting you now...";
    Layout = "_EmptyLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: white;
            color: purple;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .cavero-logo-full {
            max-width: 100%;
            height: 80px;
            margin-bottom: 20px;
        }

        h1,
        p,
        a {
            text-align: center;
            color: purple;
        }

        p {
            margin-top: auto;
        }
    </style>
</head>

<body>
    <img class="cavero-logo-full" src="/img/cavero-logo-full.png" alt="Cavero Logo" />
    <h1>@ViewData["Title"]</h1>

    <script>
        setTimeout(function () {
            window.location.href = "/Identity/Account/Login";
        }, 5000); 
    </script>
</body>

</html>




