@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = $"Your email has been confirmed redirecting you now...";
    Layout = "_EmptyLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: white;
            color: purple;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .cavero-logo-full {
            max-width: 100%;
            height: 100;
            margin-bottom: 20px;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>

<body>
    <img class="cavero-logo-full" src="/img/cavero-logo-full.png" alt="Cavero Logo" />
    <h1>@ViewData["Title"]</h1>
    @* <partial name="_StatusMessage" model="Model.StatusMessage"/> *@
</body>

</html>


