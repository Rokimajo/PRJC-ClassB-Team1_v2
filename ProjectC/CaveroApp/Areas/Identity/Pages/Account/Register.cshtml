@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_EmptyLayout";
}
<html>
<head>
    <link rel="stylesheet" href="/css/globals.css"/>
    <link rel="stylesheet" href="/css/styleguide.css"/>
    <link rel="stylesheet" href="/css/registration.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .validation-summary-errors {
            font-family: 'Montserrat', sans-serif;
            color: darkred;
            font-size: 18px;
            font-weight: 600;
            padding: 6px;
        }
    </style>
</head>
<body>
<section id="registration-page">
  <div class='air air1'></div>
  <div class='air air2'></div>
  <div class='air air3'></div>
  <div class='air air4'></div>
    <form id="registerForm" class="signup-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <!-- FORM HEADER -->
        <div class="form-header">
            <img src="/img/caverologowhite.png"/>
            <h1>Account Maken</h1>
            <p>Fields met een * zijn required</p>
        </div>
        <!-- FORM BODY -->
        <div class="form-body">
            <p class="log-in-link">Heeft u al een account?</p>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
            <!-- First name & Last name -->
            <div class="row">
                <div class="input-group">
                    <label>First Name*</label>
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="..."/>
                    <span asp-validation-for="Input.FirstName" class="text-danger" style="color: red; margin-top: 3px;"></span>
                </div>
                <div class="input-group">
                    <label>Last Name*</label>
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="..."/>
                    <span asp-validation-for="Input.LastName" class="text-danger" style="color: red; margin-top: 3px;"></span>
                </div>
            </div>
            <!-- Email -->
            <div class="row">

                <div class="input-group">
                    <label>Email*</label>
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@cavero.nl"/>
                    <span asp-validation-for="Input.Email" class="text-danger" style="color: red; margin-top: 3px;"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-group">
                    <label>Password*</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                    <span asp-validation-for="Input.Password" class="text-danger" style="color: red; margin-top: 3px;"></span>
                </div>
                <div class="input-group">
                    <label>Confirm Password*</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password repeat"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="color: red; margin-top: 3px;"></span>
                </div>
            </div>
            <!--  FORM FOOTER   -->
            <div class="form-footer">
                <button id="registerSubmit" class="btn" type="submit">
                    <p>Create</p>
                    <img src="/img/icon-arrow-right.svg">
                </button>
            </div>
        </div>
    </form>
</section>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
