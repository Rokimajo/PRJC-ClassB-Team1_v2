@page
@model ResetPasswordModel
@using CaveroApp.Areas.Identity.Data
@inject SignInManager<CaveroAppUser> SignInManager
@inject UserManager<CaveroAppUser> UserManager
@{
    ViewData["Title"] = "Reset password";
    Layout = "_EmptyLayout";
}

<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/css/globals.css" />
    <link rel="stylesheet" href="/css/styleguide.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
    <section id="registration-page">
        <div class='air air1'></div>
        <div class='air air2'></div>
        <div class='air air3'></div>
        <div class='air air4'></div>
        <form id="registerForm" class="signup-form" asp-route-returnUrl="" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <!-- FORM HEADER -->
            <div class="form-header">
                <img src="/img/caverologowhite.png" />
                <h1>Reset Password</h1>
            </div>
            <!-- FORM BODY -->
            <div class="form-body">
                <!-- Email -->
                <p>
                    Enter your email.
                </p>
                <div class="row">
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" aria-required="true"
                            placeholder="Name@Cavero.nl" />
                        <span asp-validation-for="Input.Email" class="text-danger"
                            style="color: red; margin-top: 3px;"></span>

                    </div>
                </div>
                <p>
                    Enter your new password.
                </p>
                <div class="row">
                    <div class="input-group">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password"
                            aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"
                            style="color: red; margin-top: 3px;"></span>
                    </div>
                </div>
                <p>
                    Confirm your new password.
                </p>
                <div class="row">
                    <div class="input-group">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                            aria-required="true" placeholder="Confirm Password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"
                            style="color: red; margin-top: 3px;"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                    </div>
                </div>
                <div class="row">
                    <div class="remember-me-button">
                        <a asp-page="./Login" class="form-label">Return to login</a>
                    </div>
                </div>
            </div>
        </form>
    </section>
</body>

</html>

