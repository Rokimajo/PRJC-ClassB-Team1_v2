@page
@model ResetPasswordConfirmationModel
@using CaveroApp.Areas.Identity.Data
@inject SignInManager<CaveroAppUser> SignInManager
@inject UserManager<CaveroAppUser> UserManager
@{
    ViewData["Title"] = "Reset password";
    Layout = "_EmptyLayout";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/globals.css"/>
    <link rel="stylesheet" href="/css/styleguide.css"/>
    <link rel="stylesheet" href="/css/login.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<section id="registration-page">
    <div class='air air1'></div>
    <div class='air air2'></div>
    <div class='air air3'></div>
    <div class='air air4'></div>
    <form id="registerForm" class="signup-form" asp-route-returnUrl="" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <!-- FORM HEADER -->
        <div class="form-header">
            <img src="/img/caverologowhite.png"/>
            <h1>Reset Password</h1>
        </div>
        <!-- FORM BODY -->
        <div class="form-body">
            <div class="row">
                <div class="input-group">
                    <p>
                        Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
                    </p>
                </div>
            </div>
        </div>
    </form>
</section>
</body>
</html>


